{
  "$id": "https://www.f1db.com/schema/v5.0.0/splitted/f1db-continents.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "F1DB",
  "description": "F1DB Continents JSON Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Continent"
  },
  "additionalProperties": false,
  "definitions": {
    "Continent": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique identifier for the continent."
        },
        "code": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "pattern": "^[A-Z]{2}$",
          "description": "The unique code of the continent."
        },
        "name": {
          "type": "string",
          "description": "The name of the continent."
        },
        "demonym": {
          "type": "string",
          "description": "The demonym used for people from the continent."
        }
      },
      "required": [
        "id",
        "code",
        "name",
        "demonym"
      ]
    }
  }
}
